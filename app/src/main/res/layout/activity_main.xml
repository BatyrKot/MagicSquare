<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/teal_700"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_mode_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Выберите режим игры:"
        android:textColor="#FFBF00"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn_3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_mode_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="3x3"
        android:textSize="15sp"
        app:backgroundTint="#0BFF03" />

    <Button
        android:id="@+id/btn_4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_3x3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="4x4"
        android:textSize="15sp"
        app:backgroundTint="#0BFF03" />

</RelativeLayout>
