<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0098B3"
    android:padding="16dp"
    tools:context=".Game3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:gravity="center"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#EEFF00"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Вернуться"
        app:backgroundTint="#11000000" />

    <Button
        android:id="@+id/SUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="50dp"
        android:text="SUM"
        app:backgroundTint="#11000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell1"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell2"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell3"
                style="@style/EditTextStyle"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell4"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell5"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell6"
                style="@style/EditTextStyle"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell7"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell8"
                style="@style/EditTextStyle"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/cell9"
                style="@style/EditTextStyle"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/sum1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="515dp"
        style="@style/SumsStyle" />

    <TextView
        android:id="@+id/sum2"
        android:layout_marginStart="325dp"
        android:layout_marginTop="270dp"
        style="@style/SumsStyle" />

    <TextView
        android:id="@+id/sum3"
        android:layout_marginStart="325dp"
        android:layout_marginTop="450dp"
        style="@style/SumsStyle" />

    <TextView
        android:id="@+id/sum4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="205dp"
        style="@style/SumsStyle" />

    <TextView
        android:id="@+id/sum5"
        android:layout_marginStart="255dp"
        android:layout_marginTop="210dp"
        style="@style/SumsStyle" />

    <TextView
        android:id="@+id/sum6"
        android:layout_marginStart="75dp"
        android:layout_marginTop="210dp"
        style="@style/SumsStyle" />


    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Проверить"
        app:backgroundTint="#11000000" />


    <Button
        android:id="@+id/newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/validate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Новая игра"
        app:backgroundTint="#11000000" />


</RelativeLayout>
