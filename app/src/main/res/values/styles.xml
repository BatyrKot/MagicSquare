<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>

        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAppearance">@style/EditTextTextAppearance</item>
    </style>

    <style name="EditTextTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditTextStyle4" parent="android:Widget.EditText">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAppearance">@style/EditTextTextAppearance4</item>
    </style>

    <style name="EditTextTextAppearance4" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="SumsStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/SumsAppearance</item>
    </style>

    <style name="SumsAppearance" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF200</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>